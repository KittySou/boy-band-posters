
<div class="container">
  <div class="text-center padded">
    <h1>Rental request details:</h1>
  </div>

  <div class="mx-auto col-8">
    <%= form_with model: @booking, url: poster_bookings_path(@poster), method: :post, class: "form" do |form| %>
      <div class="form-group mb-4">
        <%= form.label :book_this_poster_from, class: "control-label" %>
        <%= form.date_field :checkin_on, class: "form-control"%>
      </div>

      <div class="form-group mb-4">
        <%= form.label :to, class: "control-label" %>
        <%= form.date_field :checkout_on, class: "form-control"%>
      </div>

      <div class="form-group mb-4">
        <%= form.label :address_to_send_the_poster, class: "control-label" %>
        <%= form.text_field :value, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Send request", class: "btn btn-flat" %>
      </div>
    <% end %>
  </div>
</div>
