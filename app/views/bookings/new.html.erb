
<div class="container">
  <div class="text-center padded">
    <h1>Rental request details:</h1>
  </div>

    <%= form_with model: @booking, url: bookings_path, method: :post, class: "form" do |form| %>
      <div class="form-group">
        <%= form.label :checkin_on, class: "control-label" %>
        <%= form.date_field :checkin_on, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :checkout_on, class: "control-label" %>
        <%= form.date_field :checkout_on, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :value, class: "control-label" %>
        <%= form.text_field :value, class: "form-control" %>
      </div>

      <br>

      <div class="form-group">
        <%= form.submit "Send request", class: "btn btn-flat" %>
      </div>
    <% end %>
  </div>
