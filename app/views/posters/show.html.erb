<div class="container">
  <div class="row">
    <%= image_tag @poster.photo, class: "col-4 show-image"%>
    <div class="col-8" id="show-details">
      <h1><%= @poster.band_name %></h1>
      <p><i class="fa-solid fa-circle-info"></i> <%= @poster.description %></p>
      <p><i class="fa-solid fa-dollar-sign"></i> <%= @poster.price_per_day %></p>
      <p><i class="fa-solid fa-up-down"></i> cm <%= @poster.height %></p>
      <p><i class="fa-solid fa-arrows-left-right"></i> cm <%= @poster.width %></p>
      <%= link_to "Rent poster now!", "#", class: "btn btn-flat" %>
    </div>


  </div>
</div>
